# ============================================
# 关山智能系统环境配置示例
# 复制此文件为 .env 并填入实际配置值
# ============================================

# ====================
# 应用基础配置
# ====================
APP_NAME="Guanshan Intelligence System"
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=INFO

# ====================
# 安全配置
# ====================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ====================
# MongoDB配置
# ====================
MONGODB_URL=mongodb://admin:password123@localhost:27017/intelligent_system?authSource=admin
MONGODB_DB_NAME=intelligent_system
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# ====================
# MariaDB配置
# ====================
MARIADB_URL=mysql+aiomysql://app_user:apppass123@localhost:3306/intelligent_system
MARIADB_POOL_SIZE=20
MARIADB_MAX_OVERFLOW=10
MARIADB_POOL_TIMEOUT=30

# ====================
# Redis缓存配置
# ====================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# ====================
# RabbitMQ消息队列
# ====================
RABBITMQ_URL=amqp://admin:admin123@localhost:5672//
RABBITMQ_EXCHANGE=intelligent_system
RABBITMQ_QUEUE_PREFIX=is_

# ====================
# Firecrawl爬虫配置
# ====================
FIRECRAWL_API_KEY=fc-791acc51e2284efc9080a2bcf338565c
FIRECRAWL_BASE_URL=https://api.firecrawl.dev
FIRECRAWL_TIMEOUT=30
FIRECRAWL_MAX_RETRIES=3

# ====================
# LLM配置
# ====================
LLM_PROVIDER=openai  # 可选: openai, claude, local
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-opus-20240229

# ====================
# 向量数据库配置
# ====================
VECTOR_DB_TYPE=qdrant  # 可选: qdrant, milvus
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=documents

# ====================
# RAG配置
# ====================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
RERANK_MODEL=